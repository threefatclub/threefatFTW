  fx:controller="com.example.threefatftw.HelloController">
   <Button fx:id="weight" layoutX="271.0" layoutY="14.0" mnemonicParsing="false" prefWidth="175.0"
     text="WEIGHT" textFill="#5ab950">


   </Button>
   <Button fx:id="length" layoutX="191.0" layoutY="39.0" mnemonicParsing="false"
     onAction="#switchtolength" text="LENGTH" textFill="#a8a8a8">

      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Button fx:id="currency" layoutX="425.0" layoutY="39.0" mnemonicParsing="false"
     onAction="#switchtocurrency" style="-fx-border-width: 0;" text="CURRENCY" textFill="#a8a8a8">

      <opaqueInsets>
         <Insets/>
      </opaqueInsets>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <TextField fx:id="toconvert" layoutX="44.0" layoutY="97.0" prefHeight="59.0" prefWidth="175.0">
      <font>
         <Font size="15.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="TEXT"/>
      </cursor>
   </TextField>
   <TextField fx:id="finalresult" editable="false" layoutX="386.0" layoutY="97.0" prefHeight="59.0"
     prefWidth="149.0">
      <font>
         <Font size="15.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="TEXT"/>
      </cursor>
   </TextField>

   <Button fx:id="convert" defaultButton="true" layoutX="216.0" layoutY="190.0"
     mnemonicParsing="false" onAction="#convertweight" prefHeight="44.0" prefWidth="124.0"
     style="-fx-background-color: #5ab950;" text="Convert" textFill="WHITE">
      <font>
         <Font name="Candara" size="20.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Button fx:id="switchx" layoutX="380.0" layoutY="190.0" mnemonicParsing="false"
     onAction="#wswitch" prefHeight="44.0" prefWidth="124.0" text="Switch" textFill="#5ab950">
      <font>
         <Font name="Candara" size="20.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <ComboBox fx:id="wbox" layoutX="186.0" layoutY="97.0" prefHeight="59.0" prefWidth="149.0"
     value="kilogram (kg)" visibleRowCount="5">
      <effect>

      </effect>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </ComboBox>
   <ComboBox fx:id="wbox1" layoutX="529.0" layoutY="97.0" prefHeight="59.0" prefWidth="149.0"
     value="pound (lb)" visibleRowCount="5">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </ComboBox>
   <Line endX="189.0" layoutX="146.0" layoutY="156.0" startX="-107.0" stroke="#5ab950"
     strokeWidth="2.0"/>
   <Line endX="186.0" layoutX="489.0" layoutY="156.0" startX="-107.0" stroke="#5ab950"
     strokeWidth="2.0"/>
   <Button fx:id="game" layoutX="295.0" layoutY="260.0" mnemonicParsing="false" onAction="#game"
     text="DO NOT CLICK HERE">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
</AnchorPane>
